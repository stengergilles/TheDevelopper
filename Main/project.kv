#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window
#:import CircularButton Lib.roundbutton.CircularButton

<CircularButton>:
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source:'16353994315461292131848351535886.png'

FloatLayout:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'data/images/background.jpg'
            size: self.size

    CircularButton:
        pos: win.Window.width*0.8,20
        size: 128,128
        size_hint: None,None
        on_press:app._create_popup_workspace_open()
        
    BoxLayout:
        padding: 10
        spacing: 10
        size_hint: 1, None
        pos_hint: {'top': 1}
        height: 44
        Image:
            size_hint: None, None
            size: 24, 24
            source: 'data/logo/kivy-icon-24.png'
        Label:
            id: title
            height: 24
            text_size: self.width, None
            color: (1, 1, 1, .8)
            text: 'Dev Project:' + app.workspaceRoot

<SchemaObject>:
    on_size: self.center = win.Window.center
    size_hint: None,None
    size: 400,400
    auto_bring_to_front:False
    do_rotation: True
    do_translation: True
    do_scale: True
    BoxLayout:
        id: bl 
        size:400,400
        Label:
            id: title
            text: 'project title'
            height: 24
            color: (0,0,0,.8)

            canvas.before:
                Color:
                    rgba: 1,1,1,1
                BorderImage:
                    source: 'shadow32.png'
                    border: (36,36,36,36)
                    size:(self.width+72, self.height+72)
                    pos: (-36,-36)
                    
        Button:
            id:btn
            text:'button'
