#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window
#:import CircularButton Lib.roundbutton.CircularButton

<CircularButton>:
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source:'16353994315461292131848351535886.png'

FloatLayout:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'data/images/background.jpg'
            size: self.size

    CircularButton:
        pos: win.Window.width*0.8,20
        size: 128,128
        size_hint: None,None
        on_press:app._create_popup_workspace_open()
        
    BoxLayout:
        padding: 10
        spacing: 10
        size_hint: 1, None
        pos_hint: {'top': 1}
        height: 44
        Image:
            size_hint: None, None
            size: 24, 24
            source: 'data/logo/kivy-icon-24.png'
        Label:
            id: title
            height: 24
            text_size: self.width, None
            color: (1, 1, 1, .8)
            text: 'Dev Project:' + app.workspaceRoot

	FloatLayout:
		pos_hint: {'top': 1}
		size_hint: 1,1
		id: canvasZone